<div class='row'>
  <div class='col-xs-12'>
    <div class='well'>
      <h1>Cart</h1>
      <% if @items.any? %>
        <table class="table">
          <%- @items.each do |item| %>
            <tr>
              <th>Item</th>
              <th>Price</th>
              <th>Qty</th>
              <th>Total</th>
              <th></th>
            </tr>
            <tr>
              <td><%= item.name %></td>
              <td><%= money(item.unit_price) %></td>
              <td><%= item.quantity %></td>
              <td><%= money(item.value) %></td>
              <td><%= link_to 'Remove', remove_carts_path(cart_item_id: item.id), method: :delete %></td>
            </tr>
          <% end %>
          <tr>
            <td>Total before taxes:</td>
            <td></td>
            <td></td>
            <td><%= money(@cart.meta['display_price']['without_tax']) %></td>
            <td></td>
          </tr>
          <tr>
            <td>Total including taxes:</td>
            <td></td>
            <td></td>
            <td><%= money(@cart.meta['display_price']['with_tax']) %></td>
          </tr>
        </table>
        <%= link_to 'Checkout', root_path, class: 'btn btn-primary pull-right' %>
        <div class='clearfix'></div>
      <% else %>
        Your cart is empty.
      <% end %>
    </div>
  </div>
</div>
