<%- @products.each_slice(4) do |slice| %>
  <div class='row'>
    <%- slice.each do |product| %>
      <div class='col-xs-6 col-md-4'>
        <div class='well'>
          <%= image_tag @products.included.find('files', product.files.first.id).href %>
          <br/>
          <%= link_to product.name, product_path(product.id) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
