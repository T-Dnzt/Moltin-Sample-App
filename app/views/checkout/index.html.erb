<div class='row'>
  <div class='col-xs-12 col-md-6 col-md-offset-3'>
    <div class='well'>
      <h1>Checkout</h1>
      <%= form_tag create_checkout_path do %>
        <div class='row'>
          <div class='col-xs-12'>
            <div class="form-group">
              <label for="email">Email</label>
              <%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email...' %>
            </div>

            <div class='row'>
              <div class='col-xs-12 col-md-6'>
                <div class="form-group">
                  <label for="first_name">First Name</label>
                  <%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'First Name...' %>
                </div>
              </div>
              <div class='col-xs-12 col-md-6'>
                <div class="form-group">
                  <label for="last_name">Last Name</label>
                  <%= text_field_tag :last_name, '', class: 'form-control', placeholder: 'Last Name...' %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='row'>
          <div class="col-xs-12">
              <button class="subscribe btn btn-success btn-lg btn-block" type="submit">
                Checkout
              </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
